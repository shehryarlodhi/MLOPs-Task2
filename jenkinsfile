pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                // Checkout your code
                git 'https://github.com/shehryarlodhi/MLOPs-Task2'
            }
        }

        stage('Login to Docker Hub') {
            steps {
                script {
                    // Manually login to Docker Hub
                    sh 'echo $DOCKER_PASSWORD | docker login -u $DOCKER_USERNAME --password-stdin'
                }
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    // Build your Docker image
                    sh 'docker build -t your-image-name:latest .'
                }
            }
        }

        stage('Push Docker Image') {
            steps {
                script {
                    // Push the image to Docker Hub
                    sh 'docker push your-image-name:latest'
                }
            }
        }
    }

    environment {
        DOCKER_USERNAME = credentials('shehryarlodhi') // Replace with your actual credential ID
        DOCKER_PASSWORD = credentials('0321lodhi') // Replace with your actual credential ID
    }
}
