pipeline {
    agent any

    stages {
        stage('Login to Docker Hub') {
            steps {
                script {
                    docker.withRegistry('https://index.docker.io/v1/', credentials('docker-hub-creds')) {
                        echo 'Logged in successfully to Docker Hub'
                    }
                }
            }
        }
    }
}
